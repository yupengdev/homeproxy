{
  "log": {
    "disabled": false,
    "level": "warn",
    "output": "/var/run/homeproxy/sing-box-c.log",
    "timestamp": true
  },
  "dns": {
    "servers": [
      {
        "tag": "系统 DNS",
        "address": "https://223.5.5.5/dns-query",
        "detour": "🐢 直连"
      },
      {
        "tag": "local",
        "address": "local",
        "detour": "🐢 直连"
      }
    ],
    "rules": [
      {
        "outbound": "any",
        "server": "系统 DNS",
        "rewrite_ttl": 3600
      },
      {
        "rule_set": "white_list",
        "server": "local",
        "rewrite_ttl": 3600
      },
      {
        "clash_mode": "direct",
        "server": "系统 DNS",
        "rewrite_ttl": 3600
      },
      {
        "clash_mode": "global",
        "server": "系统 DNS",
        "rewrite_ttl": 3600
      }
    ],
    "final": "系统 DNS",
    "strategy": "prefer_ipv4",
    "disable_cache": false,
    "disable_expire": false,
    "independent_cache": true,
    "reverse_mapping": false
  },
  "inbounds": [
    {
      "type": "direct",
      "tag": "dns-in",
      "listen": "::",
      "listen_port": 5333
    },
    {
      "type": "mixed",
      "tag": "mixed-in",
      "listen": "::",
      "listen_port": 5330,
      "udp_timeout": "300s",
      "sniff": true,
      "sniff_override_destination": true,
      "set_system_proxy": false
    },
    {
      "type": "tun",
      "tag": "tun-in",
      "interface_name": "singtun0",
      "address": [
        "172.19.0.1/30"
      ],
      "mtu": 9000,
      "gso": false,
      "auto_route": false,
      "udp_timeout": "300s",
      "stack": "system",
      "sniff": true,
      "sniff_override_destination": true
    }
  ],
  "outbounds": [
    {
      "tag": "📢 广告",
      "type": "selector",
      "outbounds": [
        "🚫 阻断",
        "🐢 直连"
      ],
      "interrupt_exist_connections": true
    },
    {
      "tag": "🐢 直连",
      "type": "direct"
    },
    {
      "tag": "dns-out",
      "type": "dns"
    },
    {
      "tag": "🚫 阻断",
      "type": "block"
    }
  ],
  "route": {
    "rules": [
      {
        "inbound": "dns-in",
        "outbound": "dns-out"
      },
      {
        "protocol": "dns",
        "outbound": "dns-out"
      },
      {
        "rule_set": "white_list",
        "outbound": "🐢 直连"
      },
      {
        "clash_mode": "direct",
        "outbound": "🐢 直连"
      },
      {
        "clash_mode": "global",
        "outbound": "🐢 直连"
      },
      {
        "rule_set": "geosite_category-ads-all",
        "outbound": "📢 广告"
      }
    ],
    "rule_set": [
      {
        "type": "inline",
        "tag": "white_list",
        "rules": [
          {
            "domain": [
              "sub.su",
              "xiaoya.su",
              "pve.su"
            ]
          }
        ]
      },
      {
        "tag": "geosite_category-ads-all",
        "type": "local",
        "format": "binary",
        "path": "/etc/homeproxy/resources/category-ads-all.srs"
      }
    ],
    "auto_detect_interface": true,
    "override_android_vpn": true,
    "final": "🐢 直连"
  },
  "experimental": {
    "cache_file": {
      "enabled": true,
      "path": "/var/run/homeproxy/cache.db"
    }
  }
}
